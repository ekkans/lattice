{{#if visible}}
  {{#if topic}}
    <div class="lattice-topic-card card-content">
      <div class="topic-card-header">
        <h1>{{topic.title}}</h1>
        <div>{{{topic.excerpt}}}</div>
        {{#link-to 'topic' topic class='topic-card-link'}}
          {{i18n 'lattice.client.view_topic'}}
        {{/link-to}}
      </div>
      <div class="topic-card-footer">
        <div class="topic-card-user-avatar">
          <div>{{i18n 'created_lowercase'}}</div>
          <span>{{avatar topic.created_by imageSize="small"}}</span>
          <span>{{format-date topic.created_at format="tiny"}}</span>
        </div>
        <div class="topic-card-user-avatar">
          <div>{{i18n 'last_reply_lowercase'}}</div>
          <span>{{avatar topic.last_poster imageSize="small"}}</span>
          <span>{{format-date topic.last_posted_at format="tiny"}}</span>
        </div>

        <div>
          <div class="topic-card-number">{{topic.posts_count}}</div>
          <div>{{i18n 'replies'}}</div>
        </div>
        <div>
          <div class="topic-card-number">{{topic.views}}</div>
          <div>{{i18n 'views'}}</div>
        </div>
        <div>
          <div class="topic-card-number">{{topic.participant_count}}</div>
          <div>{{i18n 'lattice.client.participants'}}</div>
        </div>
        <div>
          <div class="topic-card-number">{{topic.like_count}}</div>
          <div>{{i18n 'likes'}}</div>
        </div>
      </div>
    </div>
  {{else}}
    {{loading-spinner}}
  {{/if}}
{{/if}}
