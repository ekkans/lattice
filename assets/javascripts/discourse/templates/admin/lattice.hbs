{{#if model}}
  <form class="form-horizontal">
    <div>
      <label for="enabled">{{i18n 'lattice.admin.enabled'}}</label>
      {{input type='checkbox' checked=model.enabled}}

      <label for="title">{{i18n 'lattice.admin.title'}}</label>
      {{input value=model.title}}
    </div>

    <div>
      <label for="slug">{{i18n 'lattice.admin.slug'}}</label>
      {{input value=model.slug placeholder=parameterizedTitle}}
    </div>

    <div>
      <label for="description">{{i18n 'lattice.admin.description'}}</label>
      {{textarea value=model.description}}
    </div>

    <div>
      <label for="rows">{{i18n 'lattice.admin.rows'}}</label>
      {{tag-chooser tags=model.rows blacklist=model.rows allowCreate=false placeholder="" everyTag="true" unlimitedTagCount="true"}}
    </div>

    <div>
      <label for="columns">{{i18n 'lattice.admin.columns'}}</label>
      {{tag-chooser tags=model.columns blacklist=model.columns allowCreate=false placeholder="" everyTag="true" unlimitedTagCount="true"}}
    </div>

    <div>
      <label for="limit_by_category">
        {{input type="checkbox" checked=model.limit_by_category}}
        {{i18n 'lattice.admin.limit_by_category'}}
      </label>
      {{#if model.limit_by_category}}
        {{category-chooser value=model.category_id}}
      {{/if}}
    </div>

    <div>
      <label for="topics_per_cell">{{i18n 'lattice.admin.topics_per_cell'}}</label>
      {{input type="number" value=model.topics_per_cell}}
    </div>

    <div class='buttons'>
      <button {{action "save"}} disabled={{disableSave}} class='btn btn-primary'>{{i18n 'admin.customize.save'}}</button>
      {{#if model.id}}
        <button {{action "destroy"}} class='btn btn-danger'>{{fa-icon "trash-o"}}{{i18n 'admin.customize.delete'}}</button>
      {{/if}}
    </div>
  </form>
{{else}}
  <p>{{i18n 'search.no_results'}}</p>
{{/if}}
